@page
@model InventoryModel
@{
    ViewData["Title"] = "Car Dealership - Inventory";
}

<div class="container my-5">
    <h1>Vehicle Inventory</h1>

    <div class="row">
        <div class="col-md-3">
            <h3>Filter</h3>
            <form>
                <div class="form-group">
                    <label for="make">Make</label>
                    <select class="form-control" id="make">
                        <option value="">All Makes</option>
                        <option value="Toyota">Toyota</option>
                        <option value="Honda">Honda</option>
                        <option value="Ford">Ford</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="model">Model</label>
                    <select class="form-control" id="model">
                        <option value="">All Models</option>
                        <option value="Camry">Camry</option>
                        <option value="Civic">Civic</option>
                        <option value="F-150">F-150</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="range" class="form-control-range" id="price" min="10000" max="50000" step="1000">
                    <output for="price">$20,000</output>
                </div>
                <button type="submit" class="btn btn-primary">Filter</button>
            </form>
        </div>
        <div class="col-md-9">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Photo</th>
                        <th>Make</th>
                        <th>Model</th>
                        <th>Year</th>
                        <th>Mileage</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><img src="https://th.bing.com/th/id/R.8f9ee66415f3dcfb026cd296bb7dc0e2?rik=xvbTztrU3lPMpA&pid=ImgRaw&r=0" alt="Toyota Camry" style="width: 150px; height: 100px;"></td>
